/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include "cmsis_os.h"
#include <stdio.h>
#include <stdio.h>
#include <stdbool.h>



UART_HandleTypeDef huart2;



/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);



void vGreenLedController(void *Parameter);
void vRedLedController(void *Parameter);
void vOrangeLedController(void *Parameter);
void vBlueLedController(void *Parameter);

void Timer1_Callback(void *arg);
void Timer2_Callback(void *arg);


#define STAKE_SIZE 512
typedef uint32_t TaskProfile_t;

TaskProfile_t Orange_TaksProfiler , Red_TaskProfiler ,Green_TaskProfiler,Blue_TaskProfiler;

TaskProfile_t Timer1,Timer2;


osThreadId_t redID,greenID,orangeID,blueID;

osTimerId_t  timer1_id ,timer2_id;



const osSemaphoreAttr_t uartSemaphoreAttribs={
		.name="Uart Semaphore",


};
char msg[100];

osSemaphoreId_t uartSemaID ;


osMessageQueueId_t msg_queue_id ;


const osMessageQueueAttr_t msgQueueAtribs={ .name ="Msg1_Queue"

										   };

int main(void)
{

	//initialilize Kernel




	HAL_Init();
	SystemClock_Config();
	MX_GPIO_Init();
	MX_USART2_UART_Init();



	osKernelInitialize();

	snprintf(msg, sizeof(msg), "System is initilized \r\n");
	HAL_UART_Transmit(&huart2, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);


	timer1_id=osTimerNew(Timer1_Callback, osTimerOnce, NULL, NULL);
	timer2_id=osTimerNew(Timer2_Callback, osTimerPeriodic, NULL, NULL);

	msg_queue_id= osMessageQueueNew(5, sizeof(uint32_t), &msgQueueAtribs);


	osThreadAttr_t greenTHreadAtrribs={.name="GreenTask",
			.stack_size=STAKE_SIZE,
			.priority = osPriorityNormal

	};


	greenID=osThreadNew(vGreenLedController,NULL,&greenTHreadAtrribs);





	osThreadAttr_t orangeTHreadAtrribs={.name="orangeTask",
			.stack_size=STAKE_SIZE,
			.priority = osPriorityNormal1

	};


	orangeID=osThreadNew(vOrangeLedController,NULL,&orangeTHreadAtrribs);




	osThreadAttr_t redTHreadAtrribs={.name="RedTask",
			.stack_size=STAKE_SIZE,
			.priority = osPriorityNormal2

	};


	redID=osThreadNew(vRedLedController,NULL,&redTHreadAtrribs);





	osThreadAttr_t blueTHreadAtrribs={.name="BlueTask",
			.stack_size=STAKE_SIZE,
			.priority = osPriorityNormal3

	};


	blueID=osThreadNew(vBlueLedController,NULL,&blueTHreadAtrribs);




	uartSemaID=osSemaphoreNew(1, 1, &uartSemaphoreAttribs);




	osKernelStart();

	while (1)
	{


	}
}





void vOrangeLedController(void *Parameter)
{

	while(1)
	{

		Orange_TaksProfiler++;

		for(int i=0;i<7000 ;i++);

		osDelay(100);



	}
}
void vRedLedController(void *Parameter)
{

	uint16_t valueToSend[1]={2025};
	while(1)
	{

		Red_TaskProfiler++;

		osMessageQueuePut(msg_queue_id, valueToSend, 0, 0);



		osDelay(100);

	}
}
void vGreenLedController(void *Parameter)
{

	while(1)
	{

		Green_TaskProfiler++;

		for(int i=0;i<7000 ;i++);
		osDelay(100);


	}
}



void vBlueLedController(void *Parameter)
{


	int32_t rcv_masg[1];
	osTimerStart(timer1_id, 5000);//set timer 1 period to 5000 ticks
	osTimerStart(timer2_id, 1000);//set timer 2 period to 5000 ticks

	while(1)
	{

		Blue_TaskProfiler++;



		osMessageQueueGet(msg_queue_id,rcv_masg,NULL,osWaitForever);


		snprintf(msg, sizeof(msg), "The Message Received is :%d \r\n",(int)rcv_masg[0]);
		HAL_UART_Transmit(&huart2, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);



		osDelay(100);



	}

}



void Timer1_Callback(void *arg)
{
	Timer1++;
}


void Timer2_Callback(void *arg)
{
	Timer2++;
}


/**
 * @brief System Clock Configuration
 * @retval None
 */
void SystemClock_Config(void)
{
	RCC_OscInitTypeDef RCC_OscInitStruct = {0};
	RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

	/** Configure the main internal regulator output voltage
	 */
	__HAL_RCC_PWR_CLK_ENABLE();
	__HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

	/** Initializes the RCC Oscillators according to the specified parameters
	 * in the RCC_OscInitTypeDef structure.
	 */
	RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
	RCC_OscInitStruct.HSIState = RCC_HSI_ON;
	RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
	RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
	if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
	{
		Error_Handler();
	}

	/** Initializes the CPU, AHB and APB buses clocks
	 */
	RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
			|RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
	RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
	RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
	RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
	RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

	if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
	{
		Error_Handler();
	}
}

/**
 * @brief USART2 Initialization Function
 * @param None
 * @retval None
 */
static void MX_USART2_UART_Init(void)
{

	/* USER CODE BEGIN USART2_Init 0 */

	/* USER CODE END USART2_Init 0 */

	/* USER CODE BEGIN USART2_Init 1 */

	/* USER CODE END USART2_Init 1 */
	huart2.Instance = USART2;
	huart2.Init.BaudRate = 115200;
	huart2.Init.WordLength = UART_WORDLENGTH_8B;
	huart2.Init.StopBits = UART_STOPBITS_1;
	huart2.Init.Parity = UART_PARITY_NONE;
	huart2.Init.Mode = UART_MODE_TX_RX;
	huart2.Init.HwFlowCtl = UART_HWCONTROL_NONE;
	huart2.Init.OverSampling = UART_OVERSAMPLING_16;
	if (HAL_UART_Init(&huart2) != HAL_OK)
	{
		Error_Handler();
	}
	/* USER CODE BEGIN USART2_Init 2 */

	/* USER CODE END USART2_Init 2 */

}

